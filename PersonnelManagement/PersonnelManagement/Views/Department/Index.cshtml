@model List<PersonnelManagement.Models.EntityFramework.Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("New Department", "New", null, new {@class="btn btn-primary"})
<h2>Department List</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td><a class="btn btn-primary" href="/Department/Update/@department.Id">Update</a></td>
                    <td><a class="btn btn-warning" href="/Department/Delete/@department.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
